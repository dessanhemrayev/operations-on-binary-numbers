void summa_bits(int* a1, int* b1, int* c1)
{
    int sum = 0;
    int pr = 0;
    for (size_t i = 16; i > 0; i--)
	{
        sum = a1[i] + b1[i] + pr;
        c1[i] = sum % 2;
        pr = sum / 2;
    }
    c1[0] = (a1[0] + b1[0] + pr) % 2;
}

void summa_bits_obr(int* a1, int* b1, int* c1)
{
	int sum = 0;
    int pr = 0;
    for (size_t i = 16; i > 0; i--)
    {
        sum = a1[i] + b1[i] + pr;
        c1[i] = sum % 2;
        pr = sum / 2;
    }
    c1[0] = (a1[0] + b1[0] + pr) % 2;
    if (pr == 1)
    {

        int d[17] = { 0 };
        d[16] = 1;
        summa_bits(c1, d, c1);
    }

}


int twoToten(int* a)
{
	int sum = 0;
    for (int i = 16; i >= 1; i--)
    {
        sum += a[i] * (pow(2, 16 - i));
    }
	if (a[0] == 1) { sum *= -1; }
    return sum;
}

//Перевод 10-ный число в 2-ный код
void TenToTwo(int n, int* ds)
{
	int m;
	int i = 0;
	while (n > 0)
    {
		m = n % 2;
        ds[16 - i] = m;
		n = n / 2;
		i++;

    }

}

// Делаем инфверсию 2-ного кода
void obr(int* a)
{
	for (size_t i = 16; i > 0; i--)
	{
		if (a[i] == 0)
			a[i] = 1;
		else
			a[i] = 0;
	}

}

void pk_dk(int* a, int* b)
{
	int d[17] = { 0 };
	d[16] = 1;
	summa_bits(a, d, b);

}





